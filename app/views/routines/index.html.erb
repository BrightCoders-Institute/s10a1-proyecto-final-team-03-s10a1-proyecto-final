<%= link_to 'Create routine', new_routine_path, class: 'btn' %>

<% if @routines.any? %>
  <% @routines.each do |routine| %>
      <h1>User:<%= routine.user.name %> Exercise:<%= routine.exercise %> </h1>
    <div class="actions">
        <%= link_to 'Edit Routine', edit_routine_path(routine.id), class: 'btn' %>
        <%= link_to 'See Routine', routine_path(routine.id), class: 'btn' %>
        <%= button_to 'Delete Routine', routine_path(routine.id), class: 'btn', method: :delete %>
    </div>
  <% end %>
<% else %>
  <p>No routines were found.</p>
<% end %>
