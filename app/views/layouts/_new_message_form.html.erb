<div class="msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, data: { 
    controller: 'reset_form', action: 'turbo:submit-end->reset_form#reset' }) do |f| %>
    <%= f.text_field :body, id: 'chat-text', class: 'form-control msg-content', autocomplete: 'off' %>
    <%= f.submit data: { disable_with: false } %>
  <% end %>
</div>
