<div class="logo">
  <%= image_tag "logo.png", alt: "logo" %>
  <h1>GYMRAT</h1>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <h2>Log in</h2>
  <div class="field">
    <%= f.label :email, required: true%>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class:"input-field" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password", class:"input-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-forgot">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="btn__actions">
    <%= f.submit "Log in" %>
  </div>

  <div class="btn__actions__devise-links">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
