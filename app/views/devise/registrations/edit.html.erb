<div class="user-config", data-controller="preview">
  <%= form_for(@user, url: user_path(@user), method: :patch, html: { class: "form" }) do |form| %>
    <h2>Edit Profile</h2>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>
    
    <div class="field">
      <%= form.label :lastName %>
      <%= form.text_field :lastName, required: true %>
    </div>

    <div class="field">
      <%= form.label :birthday %>
      <%= form.date_field :birthday, required: true %>
    </div>

    <div class="field">
      <%= form.label :weight %>
      <%= form.text_field :weight, required: true %>
    </div>

    <div class="field">
      <%= form.label :height %>
      <%= form.text_field :height, required: true %>
    </div>

    <div class="field">
      <%= form.label :image_profile %>
      <%= form.file_field :image_profile, accept: "image/jpg, image/jpeg, image/png"%>
    </div>

    <div class="field btn__actions btn__actions-theme btn__actions__turbo-method" data-controller="theme">
      <button data-theme-target="theme_btn">Change Theme</button>
    </div>

    <div class="btn__actions">
      <%= form.submit "Save Changes" %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2>Edit Credentials</h2>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true %>
    </div>

    <div class="btn__actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <div class="form">
    <%= link_to :back, class: "btn__extra" do %>
      <i class="bi bi-arrow-left"></i>
      Back
    <% end %>

    <h2>Extras</h2>

    <div class="btn__actions btn__actions__turbo-method">
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
    </div>

    <div class="btn__actions btn__actions__turbo-method">
      <%= button_to "Delete my account", registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn__actions__danger' %>
    </div>
  </div>
</div>
